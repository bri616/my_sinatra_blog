<% @posts.each do |post| %>
	<div class="post">
		<h1 class="post_title"><a href="<%= post.url %>"><%= post.title %></a> | <%= post.post_time %></h1>
		<%= post.content %>
	</div>
<% end %>

<!-- a link here to the "next page" using the number variable -->
<a href="<%= "/page/#{@number}" %>">Next 5</a>
